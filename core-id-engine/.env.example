# Core ID Engine Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
SERVER_MAX_CONNECTIONS=1000
SERVER_TIMEOUT=30
SERVER_GRACEFUL_SHUTDOWN_TIMEOUT=10

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/core_identity_db
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5
DATABASE_ACQUIRE_TIMEOUT=10
DATABASE_IDLE_TIMEOUT=600
DATABASE_MAX_LIFETIME=3600
DATABASE_ENABLE_LOGGING=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=20
REDIS_CONNECTION_TIMEOUT=5
REDIS_COMMAND_TIMEOUT=3
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY_MS=100

# Cryptography Configuration
CRYPTO_ENCRYPTION_KEY=your_32_byte_encryption_key_here
CRYPTO_SIGNING_KEY=your_32_byte_signing_key_here_too
CRYPTO_HASH_COST=12
CRYPTO_TOKEN_EXPIRY_HOURS=24
CRYPTO_ENABLE_ZK_PROOFS=false

# Verification Configuration
VERIFICATION_MAX_CONCURRENT=100
VERIFICATION_TIMEOUT=30
VERIFICATION_RETRY_ATTEMPTS=3
VERIFICATION_RETRY_DELAY_MS=1000
VERIFICATION_BATCH_SIZE=10
VERIFICATION_CONFIDENCE_THRESHOLD=0.8
VERIFICATION_ENABLE_PARALLEL=true

# Monitoring Configuration
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_INTERVAL=60
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_PROMETHEUS_PORT=9090
# MONITORING_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Audit Configuration
AUDIT_ENABLE_LOGGING=true
AUDIT_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=365
AUDIT_BATCH_SIZE=100
AUDIT_FLUSH_INTERVAL=10
AUDIT_ENABLE_REAL_TIME_ALERTS=true
AUDIT_ALERT_THRESHOLD_SCORE=0.9

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_ENABLE_PER_IP=true
RATE_LIMIT_ENABLE_PER_USER=true
RATE_LIMIT_CLEANUP_INTERVAL=300

# Logging Configuration
RUST_LOG=core_id_engine=info,tower_http=info