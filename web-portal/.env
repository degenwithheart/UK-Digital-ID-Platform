# Environment Configuration for UK Digital ID Web Portals
# Production-ready environment variables for citizen portal and admin dashboard

# Environment
NODE_ENV=production
REACT_APP_ENV=production

# API Configuration
REACT_APP_API_BASE_URL=https://api.digital-identity.gov.uk
REACT_APP_CORE_ENGINE_URL=https://core.digital-identity.gov.uk
REACT_APP_WALLET_SERVICE_URL=https://wallet.digital-identity.gov.uk
REACT_APP_AUTH_SERVICE_URL=https://auth.digital-identity.gov.uk
REACT_APP_VERIFICATION_SERVICE_URL=https://verification.digital-identity.gov.uk
REACT_APP_FRAUD_DETECTION_URL=https://fraud.digital-identity.gov.uk
REACT_APP_AUDIT_SERVICE_URL=https://audit.digital-identity.gov.uk

# WebSocket Configuration
REACT_APP_WS_BASE_URL=wss://api.digital-identity.gov.uk
REACT_APP_NOTIFICATION_WS_URL=wss://notifications.digital-identity.gov.uk
REACT_APP_REAL_TIME_WS_URL=wss://realtime.digital-identity.gov.uk

# Authentication
REACT_APP_JWT_ISSUER=uk.gov.digitalidentity
REACT_APP_AUTH_DOMAIN=auth.digital-identity.gov.uk
REACT_APP_CLIENT_ID=uk_digital_id_web_portal
REACT_APP_OAUTH_REDIRECT_URI=https://portal.digital-identity.gov.uk/callback

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=uk-digital-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=uk-digital-id
REACT_APP_FIREBASE_STORAGE_BUCKET=uk-digital-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef

# Feature Flags
REACT_APP_ENABLE_BIOMETRIC_AUTH=true
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_PWA=true

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_HSTS=true
REACT_APP_ENABLE_CERTIFICATE_PINNING=true
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_MAX_LOGIN_ATTEMPTS=3

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_DURATION=3600000
REACT_APP_API_TIMEOUT=30000
REACT_APP_MAX_RETRY_ATTEMPTS=3

# Monitoring & Analytics
REACT_APP_SENTRY_DSN=https://your_sentry_dsn
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_HOTJAR_ID=your_hotjar_id
REACT_APP_LOG_LEVEL=warn

# Government Integration - Complete 25 System Coverage
REACT_APP_GOV_UK_VERIFY_URL=https://www.verify.service.gov.uk

