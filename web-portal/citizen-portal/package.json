{
  "name": "uk-digital-id-citizen-portal",
  "version": "2.0.0",
  "description": "UK Digital Identity Citizen Portal - Secure access to government services",
  "private": true,
  "homepage": "https://portal.digital-identity.gov.uk",
  "author": {
    "name": "UK Government Digital Service",
    "email": "support@digital-identity.gov.uk",
    "url": "https://digital-identity.gov.uk"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/uk-gov-mirror/digital-identity-citizen-portal.git"
  },
  "bugs": {
    "url": "https://github.com/uk-gov-mirror/digital-identity-citizen-portal/issues"
  },
  "keywords": [
    "uk-government",
    "digital-identity",
    "citizen-services",
    "next.js",
    "typescript",
    "pwa"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run --headless",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "audit:security": "npm audit --audit-level moderate",
    "audit:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "audit:accessibility": "axe http://localhost:3000",
    "prepare": "husky install",
    "analyze": "cross-env ANALYZE=true next build",
    "export": "next export",
    "deploy:staging": "npm run build && aws s3 sync out/ s3://uk-digital-id-staging --delete",
    "deploy:production": "npm run build && aws s3 sync out/ s3://uk-digital-id-production --delete",
    "clean": "rm -rf .next out node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    
    "@reduxjs/toolkit": "^1.9.7",
    "react-redux": "^8.1.3",
    "redux-persist": "^6.0.0",
    "next-redux-wrapper": "^8.1.0",
    
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.13",
    "@mui/icons-material": "^5.14.13",
    "@mui/lab": "^5.0.0-alpha.147",
    "@mui/x-data-grid": "^6.16.0",
    "@mui/x-date-pickers": "^6.16.0",
    "@mui/system": "^5.14.13",
    
    "axios": "^1.6.0",
    "axios-retry": "^3.8.0",
    "swr": "^2.2.4",
    
    "formik": "^2.4.5",
    "yup": "^1.3.3",
    
    "socket.io-client": "^4.7.2",
    
    "next-i18next": "^14.0.3",
    "react-i18next": "^13.2.2",
    "i18next": "^23.5.1",
    
    "date-fns": "^2.30.0",
    "dayjs": "^1.11.10",
    
    "react-hot-toast": "^2.4.1",
    "notistack": "^3.0.1",
    
    "framer-motion": "^10.16.4",
    "lottie-react": "^2.4.0",
    
    "react-dropzone": "^14.2.3",
    "react-qr-code": "^2.0.12",
    "qrcode": "^1.5.3",
    "jsqr": "^1.4.0",
    
    "firebase": "^10.4.0",
    
    "crypto-js": "^4.1.1",
    "jose": "^4.15.4",
    "jsonwebtoken": "^9.0.2",
    
    "@sentry/nextjs": "^7.74.1",
    
    "workbox-core": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "next-pwa": "^5.6.0",
    
    "react-virtualized": "^9.22.5",
    "@tanstack/react-virtual": "^3.0.0-beta.60",
    
    "recharts": "^2.8.0",
    "victory": "^36.6.11",
    
    "dompurify": "^3.0.8",
    "validator": "^13.11.0",
    
    "lodash": "^4.17.21",
    "ramda": "^0.29.1",
    "uuid": "^9.0.1",
    
    "react-pdf": "^7.5.1",
    "pdfjs-dist": "^3.11.174",
    
    "react-error-boundary": "^4.0.11",
    "next-themes": "^0.2.1",
    "next-auth": "^4.24.5"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@types/lodash": "^4.14.199",
    "@types/uuid": "^9.0.5",
    "@types/validator": "^13.11.4",
    "@types/crypto-js": "^4.1.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/dompurify": "^3.0.8",
    
    "typescript": "^5.2.2",
    
    "eslint": "^8.50.0",
    "eslint-config-next": "14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-import": "^2.28.1",
    
    "prettier": "^3.0.3",
    
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    
    "cypress": "^13.3.2",
    
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    
    "@next/bundle-analyzer": "^14.0.0",
    "cross-env": "^7.0.3",
    
    "storybook": "^7.4.6",
    "@storybook/nextjs": "^7.4.6",
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-interactions": "^7.4.6",
    "@storybook/testing-library": "^0.2.2",
    
    "lighthouse": "^11.1.0",
    "@axe-core/react": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate && npm run test:ci"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "pages/**/*.{ts,tsx}",
      "components/**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}